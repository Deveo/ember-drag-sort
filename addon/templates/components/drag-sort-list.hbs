{{#each items as |item index|}}
  {{#drag-sort-item
    item                           = item
    index                          = index
    items                          = items
    group                          = group
    handle                         = handle
    class                          = childClass
    tagName                        = childTagName
    isHorizontal                   = horizontal
    draggingEnabled                = draggingEnabled
    dragEndAction                  = dragEndAction
    determineForeignPositionAction = determineForeignPositionAction
  }}
    {{yield item index}}
  {{/drag-sort-item}}
{{/each}}
